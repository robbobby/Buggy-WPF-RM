<Window x:Class="BRMWindowsUI.Views.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:BRMWindowsUI.Views"
        mc:Ignorable="d"
        FontSize="10"
        Title="ShellView" Height="450" Width="800">
        
        
        <DockPanel>
            <Menu DockPanel.Dock="Top" FontSize="15">
                <MenuItem Header="_File"/>
                <MenuItem Header="_Account">
                    <MenuItem x:Name="LoginScreen" Header="_Login"/>
                </MenuItem>
            </Menu>
            <Grid>
                <ContentControl x:Name="ActiveItem" Margin="5"></ContentControl>
            </Grid>
        </DockPanel>
</Window>
